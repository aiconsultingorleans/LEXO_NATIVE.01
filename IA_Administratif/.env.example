# LEXO v1 Environment Configuration

# Application
APP_NAME=LEXO v1
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://lexo:password@localhost:5432/lexo_dev

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
UPLOAD_PATH=~/Documents/LEXO_v1/OCR

# ML Model Paths
OCR_MODELS_PATH=./ml_models/ocr_models
MISTRAL_MODEL_PATH=./ml_models/mistral_7b_mlx
EMBEDDINGS_MODEL_PATH=./ml_models/embeddings

# ChromaDB
CHROMA_PATH=./data/chromadb

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Frontend URL
NEXT_PUBLIC_API_URL=http://localhost:8000